extends layout

block title
	title Create Room

block content
	h1 Create a new room

	form(method='post')
		fieldset.form-group
			label(for='name') Name:
			input.form-control(type='text', placeholder='Enter a name', name='name')
			small.text-muted Give your chat room a meaningful name for people to refer it.
		button.btn.btn-primary(type='submit') Create new chat room
		a.btn.btn-default(href="/admin/rooms") Cancel
