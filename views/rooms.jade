extends layout

block title
	title interpolation title

block content
	h1 Chat rooms
	a.btn.btn-primary(href= baseUrlAdmin +'/rooms/add') Create a new chat room
	table.table.table-striped
		thead
			tr
				th
				th Name
				th
				th ID
		tbody
			each room in rooms
				tr
					td(style='width: 50px;'): a(href= baseUrlAdmin + '/rooms/delete/#{room.id}')
						span.glyphicon.glyphicon-remove
					td=room.name
					td(style='width: 50px;'): a(href= baseUrlAdmin + '/rooms/edit/#{room.id}')
						span.glyphicon.glyphicon-pencil
					td=room.id
