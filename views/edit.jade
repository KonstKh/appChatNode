extends layout

block title
	title Edit room

block content
	h1 Edit a room

	form(method='post')
		fieldset.form-group
			label(for='name') Name:
			input.form-control(type='text', placeholder='Enter a name', name='name', value='#{ room.name }')
			small.text-muted Give your chat room a meaningful name for people to refer it.
		button.btn.btn-primary(type='submit') Save chat room
		a.btn.btn-default(href="/admin/rooms") Cancel
